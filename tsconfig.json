{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types/**/*.d.ts"],
  "exclude": ["lib"]
}
